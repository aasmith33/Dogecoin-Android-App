<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dogecoin"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A4F6F2F2"
        android:gravity="center"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@string/question_doge"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/true_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:shadowColor="#F8F5F5"
            android:text="@string/true_button"
            android:textColorHighlight="#FAF8F8"
            android:textColorLink="#FDF6F6"
            android:textCursorDrawable="@color/white"
            app:iconTint="@color/teal_700"
            app:rippleColor="#F8F6F6"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/false_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/false_button"
            android:textColorHighlight="#ECE5E5"
            android:textColorLink="@color/black"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="12dp"
        android:text="@string/next_button"
        android:textAlignment="center" />

</LinearLayout>